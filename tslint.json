{
  "extends": ["tslint:recommended", "tslint:latest", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {"exclude": ["config/**/*.js", "node_modules/**/*.ts", "coverage/lcov-report/*.js", "*.json"]},
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "no-submodule-imports": false,
    "autoFixOnSave": true,
    "array-type": false,
    "arrow-parens": false,
    "deprecation": {
      "severity": "warn"
    },
    "no-implicit-dependencies": false,
    "import-blacklist": [
      true,
      "rxjs/Rx"
    ],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [{"limit": 140, "ignore-pattern": "^const | ^import |^export {(.*?)}"}],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": [
          "static-field",
          "instance-field",
          "static-method",
          "instance-method"
        ]
      }
    ],
    "object-curly-spacing": false,
    "semicolon": false,
    "no-trailing-whitespace": [
      true,
      "ignore-blank-lines"
    ],
    "space-before-function-paren": false,
    "no-consecutive-blank-lines": false,
    "no-console": [
      true,
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-empty": false,
    "no-inferrable-types": [
      true,
      "ignore-params"
    ],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-use-before-declare": true,
    "interface-over-type-literal": false,
    "no-var-requires": false,
    "object-literal-key-quotes": [
      false,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "trailing-comma": false,
    "no-string-literal": false,
    "only-arrow-functions": false
  }
}
